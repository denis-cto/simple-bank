{
  "name": "api-gateway",
  "version": "1.0.0000",
  "description": "API-gateway microservice project",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts src/services/**/*.service.ts",
    "cli": "moleculer connect Kafka",
    "start": "node --trace-warnings ./node_modules/moleculer/bin/moleculer-runner --config ./dist/moleculer.config.js  ./dist/src/services/**/*.service.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build",
    "dc:down": "docker-compose down",
    "start:prod": "moleculer-runner --config ./dist/moleculer.config.js ./dist/src/services/**/*.service.js",
    "db:migrate": "echo 'db migrate dummy'",
    "db:seed": "echo 'db seed dummy'"
  },
  "license": "UNLICENSED",
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prefer-arrow": "1.1.7",
    "jest": "25.2.0",
    "jest-cli": "25.2.0",
    "moleculer-repl": "0.5.3",
    "supertest": "4.0.2",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.2",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@types/jest": "25.2.2",
    "@types/node": "17.0.23",
    "@types/redis": "4.0.11",
    "@types/socket.io": "3.0.2",
    "base64-stream": "1.0.0",
    "busboy": "0.3.1",
    "dotenv": "8.2.0",
    "jaeger-client": "3.19.0",
    "jsonpath-plus": "^6.0.1",
    "kafka-node": "4.1.3",
    "kafkajs": "1.16.0",
    "kleur": "4.1.4",
    "lodash": "4.17.21",
    "moleculer": "0.14.19",
    "moleculer-web": "0.9.1",
    "nats": "1.4.12",
    "path-to-regexp": "6.2.0",
    "qs": "6.10.3",
    "redis": "4.0.4",
    "swagger-ui-dist": "4.1.3",
    "uid": "2.0.0",
    "uuid4": "2.0.2"
  },
  "engines": {
    "node": ">= 13.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
